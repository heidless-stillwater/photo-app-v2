<% if current_user %>
  <div class="img-responsive center-block">
    <div class="card card-header results-block mt-3">
      <%= image_tag current_user.avatar, width: "400", class: "mx-auto d-block" %>
      <h3 class="text-center mt-2"><%= fa_icon 'user 1x' %> <%= current_user.email %></h3>
      <div class="mx-auto d-block">
        <%= render 'shared/gallery' %>
      </div>
    </div>
  </div>
<% else %>
  <%= render 'shared/pitch' %>
<% end %>
